---
import { Leaflet, Marker, Popup } from "astro-leaflet";

const { printers = [] } = Astro.props;
import "../styles/global.css";

---

<Leaflet
	style="height: 70vh; width: 100%;"
	options={{ tileByName: 'OSM',	center: [52.449948, -1.930614],	zoom: 16,}}>
	{
		printers.map((p: any) => (
			<Marker latlng={[p.lat, p.lng]}>
				<Popup content={`<b>${p.name}</b><br>${p.building}<br><i>Status:</i> ${p.status}<br><i>Notes:</i> ${p.notes || "N/A"}`} />
			</Marker>
		))
	}
</Leaflet>
