---
import "../styles/global.css";
---

<html>
	<head>
		<title>BHAMPRINTERS: REPORT</title>
	</head>
	<body>
		<div class="m-5 p-5">
			<h1 class="text-2xl p-2">Contribute a New Printer</h1>
			<h2 class="text-xl p-2">Or Report an Issue</h2>
			<p>---</p>
			<form class="grid grid-cols-1" name="contact" method="POST" netlify>
				<input type="hidden" name="form-name" value="Reports" />
				<p>
					<label class="block"
						>Name <input
							type="text"
							name="name"
							class="mt-2 block w-full"
						/></label
					>
				</p>
				<p>
					<label class="block"
						>Email <input
							type="email"
							name="email"
							class="mt-2 block w-full"
						/></label
					>
				</p>
				<p>
					<label class="block"
						>New Printer / Issue Info <textarea class="mt-2 block w-full"
						></textarea>
					</label>
				</p>
				<p class="hidden">
					<label>
						Don’t fill this out if you’re human: <input name="bot-field" />
					</label>
				</p>
				<button type="submit" class="block m-2 w-full bg-blue-300"
					>Submit</button
				>
			</form>
		</div>
	</body>
</html>
